<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<style>
  body {
    padding-top: 40px;
  }
  h1 {
    padding-top: 40px;
  }
  h2 {
    padding-top: 40px;
  }
</style>

<body>

  <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

        <h1>Sign in</h1>

        <form action="/users/sign_in" method="post">

          <div class="form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control" name="username" aria-describedby="emailHelp" placeholder="Enter username">
            <small class="text-muted" id="emailHelp">username</small>
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control" name="password" aria-describedby="passwordHelp" placeholder="Enter password">
            <small class="text-muted" id="passwordHelp">password must match confirmation below</small>
          </div>

          <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>
