<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>
  <% include ../static/partials/navbar.ejs %>

    <main class="container" style="margin-top: 70px;">

      <% include ../static/partials/messages.ejs %>

        <h2>Welcome to Blocipedia! Sign up here</h2>

        <div class="row">
          <div class="col-md-8">

            <form method="post" action="/users">
              <div class="form-group">
                <label>Username:</label>
                <input type="text" name="username" placeholder="Enter Username" class="form-control" />
                <small class="text-muted" id="usernameHelp">username must be at least 5 characters in length</small>
              </div>
              <div class="form-group">
                <label>Email:</label>
                <input type="email" name="email" placeholder="Enter Email" class="form-control" />
                <small class="text-muted" id="emailHelp">email address must be a valid address</small>
              </div>
              <div class="form-group">
                <label>Password:</label>
                <input type="password" name="password" placeholder="Enter Password" class="form-control" />
                <small class="text-muted" id="passwordHelp">password must match confirmation below and must be at least 6 characters in length</small>
              </div>
              <div class="form-group">
                <label>Password:</label>
                <input type="password" name="passwordConfirmation" placeholder="Enter Password confirmation" class="form-control" />
              </div><br/>

              <input type="submit" value="Sign Up" class="btn btn-primary" />
            </form>

          </div>
        </div>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

</body>

</html>
